<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/commentBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="@drawable/comment_background"
        android:elevation="2dp"

        android:paddingTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/comment_item_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:autofillHints="@color/primary_text"
            android:gravity="end"
            android:textColor="@color/primary_text"
            android:textSize="12sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/comment_item_time"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/comment_item_time"
            tools:text="сьогодні" />
        <Button
            android:id="@+id/comment_item_delete_btn"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/ic_clear"
            android:backgroundTint="@color/white_light"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/comment_item_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:autofillHints="@color/secondary_text_"
            android:gravity="start"
            android:textColor="@color/primary_text"
            android:textColorHighlight="@color/edit_text_hint"
            android:textSize="@dimen/small_text_size"

            app:layout_constraintBottom_toBottomOf="@+id/comment_item_avatar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/comment_item_avatar"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Заголовок" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/comment_item_avatar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="4dp"

            android:background="@color/transparent"
            android:src="@drawable/baseline_image_24"
            app:civ_border_color="@color/white_light"
            app:civ_border_width="@dimen/settings_user_photo_border"
            app:layout_constraintEnd_toStartOf="@+id/comment_item_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />




        <TextView
            android:id="@+id/comment_item_decsription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="8dp"
            android:autofillHints="@color/"
            android:gravity="start"
            android:singleLine="false"
            android:textColor="@color/primary_text"
            android:textColorHint="@color/secondary_text_"
            android:textSize="@dimen/normal_text_size"
            app:backgroundTint="@color/secondary_text_"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/comment_item_avatar"
            tools:text="Опис" />

        <TextView
            android:id="@+id/comment_item_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:autofillHints="@color/primary_text"
            android:gravity="end"
            android:textColor="@color/primary_text"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/comment_item_decsription"
            tools:text="12.30" />

        <Button
            android:id="@+id/comment_item_like_btn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/ic_like_uncheck"
            android:backgroundTint="@color/white_light"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/comment_item_decsription" />

        <TextView
            android:id="@+id/comment_item_likes_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/normal_text_size"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/comment_item_like_btn"
            app:layout_constraintStart_toEndOf="@+id/comment_item_like_btn"
            app:layout_constraintTop_toTopOf="@+id/comment_item_like_btn"
            tools:text="23" />



    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>